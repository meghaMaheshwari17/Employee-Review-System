<!-- edit employee page for admin -->
<div class="container">
    <div class="jumbotron">
      <h1 class="display-4 text-center">Edit Employee</h1>
    </div>
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="card">
          <div class="card-body">
            <form action="/dashboard/<%= locals.user._id %>/admin/editUser/<%= employee._id %>" method="post">
              <div class="form-group m-3">
                <label for="username">Username:</label>
                <input value="<%= employee.name %>" name="name" type="text" class="form-control" id="username" required>
              </div>
              <div class="form-group m-3">
                <label for="email">Email:</label>
                <input value="<%= employee.email %>" name="email" type="email" class="form-control" id="email" required>
              </div>
              <div class="form-group m-3">
                <label for="role">Role</label>
                <select required name="role" class="form-control" id="role">
                  <option value="employee">Employee</option>
                  <option value="admin">Admin</option>
                </select>
              </div>
              <button type="submit" class="btn btn-primary m-3">Edit</button>
              <a href="/dashboard/<%= locals.user._id %>" class="btn btn-secondary m-3" data-dismiss="modal">Cancel</a>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  